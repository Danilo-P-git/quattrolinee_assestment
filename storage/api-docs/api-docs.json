                "title": "Richiesta di Creazione Categoria",
                "description": "Schema per la creazione e modifica delle categorie",
                "required": [
                    "name"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "Rock"
                    }
                },
                "type": "object"
            },
            "EventRequest": {
                "required": [
                    "name",
                    "description",
                    "length",
                    "start_date"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "Concerto Jazz"
                    },
                    "description": {
                        "type": "string",
                        "example": "Concerto jazz dal vivo"
                    },
                    "length": {
                        "type": "number",
                        "format": "float",
                        "example": 3
                    },
                    "start_date": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-07-15 21:00:00"
                    },
                    "category_id": {
                        "type": "integer",
                        "example": 2
                    }
                },
                "type": "object"
            },
            "SearchEventRequest": {
